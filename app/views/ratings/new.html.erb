<h1>New Rating</h1>

<%= form_for :rating, url: ratings_path do |f| %>
  <p>
    <%= f.label "Restaurant" %><br>
    <%= f.select(:restaurant_id, options_from_collection_for_select(Restaurant.all, "id", "name")) %>
  </p>

  <p>
    <%= f.label "Stars" %><br>
    <%= f.select(:stars, raw('<option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option>')) %>
  </p>
 
  <p>
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>