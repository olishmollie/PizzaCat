<%= render 'partials/header' %>

<h1>Edit Rating</h1>

<%= form_for :rating, url: {action: :update}, method: "patch" do |f| %>
  <p>
  <strong><%= @restaurant.name %></strong>
</p>

<p>
  <%= f.label "Stars" %><br>
  <%= f.select(:stars, options_for_select(1..5, @rating.stars)) %>
</p>

<p>
  <%= f.label :notes %><br>
  <%= f.text_area :notes %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>